#AEM Author on CentOS
FROM centos:latest

#0. Update
RUN yum -y update
RUN yum -y upgrade

#1. Add user jenkins to the image
RUN useradd jenkins
RUN echo "slave" | passwd jenkins --stdin
RUN mkdir -p /home/jenkins

#3. Install JDK 7
RUN yum -y install java-1.7.0-openjdk-devel
ENV JAVA_HOME /usr/lib/jvm/java
RUN java -version

#4. Install Maven 3.0.5
RUN yum -y install wget
RUN wget http://archive.apache.org/dist/maven/maven-3/3.0.5/binaries/apache-maven-3.0.5-bin.tar.gz
RUN tar xvf apache-maven-3.0.5-bin.tar.gz
RUN mv apache-maven-3.0.5 /usr/local/apache-maven
RUN echo $PATH
RUN echo $JAVA_HOME
ENV M2_HOME /usr/local/apache-maven
ENV M2 $M2_HOME/bin
ENV PATH $M2:$PATH
RUN mvn -version

#5. Install Git
RUN yum -y install git


#7. Install CQ Author
RUN mkdir -p /export/apps/aem/author
WORKDIR /export/apps/aem/author
ADD cq-author-4502.jar /export/apps/aem/author/cq-author-4502.jar
ADD license.properties /export/apps/aem/author/license.properties
RUN java -jar cq-author-4502.jar -unpack -v
RUN mv /export/apps/aem/author/crx-quickstart/bin/quickstart /export/apps/aem/author/crx-quickstart/bin/quickstart.orig
ADD quickstart-author /export/apps/aem/author/crx-quickstart/bin/quickstart                                             
#RUN mkdir -p /export/apps/aem/author/crx-quickstart/install
#COPY content.zip /export/apps/aem/author/crx-quickstart/install/

#7.5 Install CQ Publisher
RUN mkdir -p /export/apps/aem/publish 
WORKDIR /export/apps/aem/publish
ADD cq-author-4502.jar /export/apps/aem/publish/cq-publish-4503.jar
ADD license.properties /export/apps/aem/publish/license.properties
RUN java -jar cq-publish-4503.jar -unpack -v  
RUN mv /export/apps/aem/publish/crx-quickstart/bin/quickstart /export/apps/aem/publish/crx-quickstart/bin/quickstart.orig
ADD quickstart-publish /export/apps/aem/publish/crx-quickstart/bin/quickstart
#RUN mkdir -p /export/apps/aem/publish/crx-quickstart/install
#COPY content.zip /export/apps/aem/publish/crx-quickstart/install/

#8. port 4502 to allow user to access AEM
#Set up all CQ ENV
ENV CQ_FOREGROUND y
ENV CQ_VERBOSE    y
ENV CQ_NOBROWSER  y
ENV CQ_JVM_OPTS   "-server -Xmx1524M -Xms512M -XX:MaxPermSize=512M"
EXPOSE 4502 4503

#9. Run quickstart
RUN yum install -y epel-release && \
    yum install -y supervisor && \
    yum clean all

RUN echo "[supervisord]" > /etc/supervisord.conf && \
    echo "nodaemon=true" >> /etc/supervisord.conf && \
    echo "loglevel=debug" >> /etc/supervisor.conf && \
    echo "" >> /etc/supervisord.conf && \
    echo "[program:aem_author]" >> /etc/supervisord.conf && \
    echo "command=/export/apps/aem/author/crx-quickstart/bin/quickstart" >> /etc/supervisord.conf && \
    echo "" >> /etc/supervisord.conf && \
    echo "[program:aem_publish]" >> /etc/supervisord.conf && \
    echo "command=/export/apps/aem/publish/crx-quickstart/bin/quickstart" >> /etc/supervisord.conf && \
    echo "" >> /etc/supervisord.conf 
CMD ["/usr/bin/supervisord", "-n"]

